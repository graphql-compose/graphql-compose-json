{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "*.js"]
}
